{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "3es",
  "version-string": "0.9.0",
  "description": "3D debug rendering instrumentation library.",
  "dependencies": [
    "zlib"
  ],
  "features": {
    "tests": {
      "description": "Build with unit tests.",
      "dependencies": [
        "gtest"
      ]
    },
    "viewer": {
      "description": "Build 3es viewer client.",
      "dependencies": [
        "cxxopts",
        "glfw3",
        "corrade",
        {
          "name": "magnum",
          "features": [
            "debugtools",
            "gl",
            "gl-info",
            "glfwapplication",
            "magnumfont",
            "primitives",
            "shaders",
            "shadertools",
            "tgaimporter",
            "text"
          ]
        },
        {
          "name": "imgui",
          "features": [
            "freetype",
            "glfw-binding"
          ]
        },
        {
          "name": "magnum-integration",
          "features": [
            "imgui"
          ]
        },
        {
          "name": "magnum-plugins",
          "features": [
            "freetypefont",
            "pngimporter"
          ]
        },
        "ryml",
        "tinyfiledialogs"
      ]
    },
    "occupancy": {
      "description": "Build occupancy map visualisation example using octomap.",
      "dependencies": [
        "octomap"
      ]
    }
  }
}